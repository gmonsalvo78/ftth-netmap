{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["api/**/*.ts", "application/**/*.ts", "core/**/*.ts", "infrastructure/**/*.ts", "integrations/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
